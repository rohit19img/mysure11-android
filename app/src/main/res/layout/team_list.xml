<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_ground_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4000"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/teamName"
                    android:layout_gravity="center_vertical"
                    android:textSize="15dp"
                    android:padding="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/white"
                    android:text="Team Name"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/editLL"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/ic_edit"
                        android:layout_height="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/cloneLL"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/ic_copy"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="7dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IND"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:textAllCaps="true"
                            android:id="@+id/team1_name"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:fontFamily="@font/lato_semibold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="26dp"
                            android:textAllCaps="true"
                            android:id="@+id/team1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IND"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:textAllCaps="true"
                            android:id="@+id/team2_name"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7"
                            android:fontFamily="@font/lato_semibold"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="26dp"
                            android:textAllCaps="true"
                            android:id="@+id/team2"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/captain"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/captain_selected"
                            android:text="C"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="8dp"
                            />
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:id="@+id/status"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:src="@drawable/player_deselected"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="80dp"
                        android:fontFamily="@font/lato_regular"
                        android:background="@color/blue"
                        android:textColor="@color/white"
                        android:text="captain"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="9dp"
                        android:maxLength="15"
                        android:padding="2dp"
                        android:id="@+id/captainName"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/vicecaptain"/>

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/captain_selected"
                            android:text="VC"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="8dp"
                            />
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:id="@+id/status1"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:src="@drawable/player_deselected"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="80dp"
                        android:fontFamily="@font/lato_regular"
                        android:background="@color/blue"
                        android:textColor="@color/white"
                        android:text="captain"
                        android:gravity="center"
                        android:textSize="9dp"
                        android:singleLine="true"
                        android:padding="2dp"
                        android:maxLength="15"
                        android:id="@+id/vicecaptainName"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="WK"
                        android:id="@+id/keeperText"
                        android:textSize="12dp"
                        android:textColor="#444f5b"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/lato_semibold"
                        android:id="@+id/countWK"
                        android:text="1"
                        android:textSize="12dp"
                        android:textColor="@color/text_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="BAT"
                        android:id="@+id/batText"
                        android:textSize="12dp"
                        android:textColor="#444f5b"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/lato_semibold"
                        android:id="@+id/countBAT"
                        android:text="1"
                        android:textSize="12dp"
                        android:textColor="@color/text_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="ALL"
                        android:id="@+id/allText"
                        android:textSize="12dp"
                        android:textColor="#444f5b"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/lato_semibold"
                        android:id="@+id/countALL"
                        android:text="1"
                        android:textSize="12dp"
                        android:textColor="@color/text_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="BOWL"
                        android:id="@+id/bowlText"
                        android:textSize="12dp"
                        android:textColor="#444f5b"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:fontFamily="@font/lato_semibold"
                        android:id="@+id/countBOWL"
                        android:text="1"
                        android:textSize="12dp"
                        android:textColor="@color/text_color"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>