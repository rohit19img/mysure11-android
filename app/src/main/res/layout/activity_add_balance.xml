<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddBalanceActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:textColor="@color/text_color"
                        android:text="Current Balance"
                        android:fontFamily="@font/lato_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/text_color"
                        android:text="â‚¹ 0"
                        android:id="@+id/currentBalance"
                        android:fontFamily="@font/lato_semibold"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Add cash to your account"
                        android:fontFamily="@font/lato_semibold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Amount to add"
                        android:textColor="@color/text_color"
                        android:textSize="14dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_margin="8dp"
                        android:textColorHint="@color/font_color"
                        android:id="@+id/addMoney"
                        android:background="@drawable/black_border"
                        style="@style/StyledTilEditText"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:hint="Amount"
                            android:textColor="@color/text_color"
                            android:text=""
                            android:maxLength="6"
                            android:background="#0000"
                            android:fontFamily="@font/lato_regular"
                            android:textColorHint="@color/font_color"
                            android:textSize="14dp"
                            android:inputType="number"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text=" + 100 "
                            android:fontFamily="@font/lato_regular"
                            android:id="@+id/add10"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:textColor="@color/text_color"
                            android:background="@drawable/black_border"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text=" + 200 "
                            android:id="@+id/add50"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:textColor="@color/text_color"
                            android:background="@drawable/black_border"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text=" + 500 "
                            android:id="@+id/add100"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/text_color"
                            android:background="@drawable/black_border"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Enter Offer Code To Get Bonus: "
                        android:textColor="@color/text_color"
                        android:textSize="14dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black_border"
                        android:layout_margin="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:hint="Enter Your Referral Code"
                            android:textColor="@color/text_color"
                            android:text=""
                            android:id="@+id/referCode"
                            android:fontFamily="@font/lato_regular"
                            android:textColorHint="@color/font_color"
                            android:textSize="14dp"
                            android:inputType="textCapCharacters"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Applied"
                            android:textColor="@color/main_green_color"
                            android:layout_alignParentRight="true"
                            android:padding="10dp"
                            android:id="@+id/applied"
                            android:visibility="gone"
                            android:textSize="14dp"
                            android:fontFamily="@font/lato_bold"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_grad"
                            android:text="UPI Payment"
                            android:id="@+id/btnUpi"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_semibold"
                            android:textSize="16dp"
                            android:layout_marginRight="10dp"/>

                        <Button
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_grad"
                            android:text="Other Payment "
                            android:id="@+id/btnOther"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_semibold"
                            android:textSize="16dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>