<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.LeaderboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:id="@+id/lb"
                android:fontFamily="@font/lato_regular"
                android:text="View the selected players of all teams after deadline. No team changes post that."
                android:textSize="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="100dp"
                android:text="View Teams"
                android:id="@+id/totalteamsLB"
                android:fontFamily="@font/lato_regular"
                android:textSize="11dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:elevation="5dp"
                android:textAllCaps="true"
                android:background="@drawable/btn_gray"
                android:textColor="@color/white"
                android:layout_height="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/font_color"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Team Name"
                android:padding="12dp"
                android:fontFamily="@font/lato_semibold"
                android:textColor="@color/text_color"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rank"
                android:padding="12dp"
                android:gravity="right"
                android:fontFamily="@font/lato_semibold"
                android:textColor="@color/text_color"
                android:textSize="12dp"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/leardboard"
        android:dividerHeight="1px"
        android:scrollbars="none"
        android:divider="@color/text_color"
        android:layout_height="wrap_content"/>

</LinearLayout>