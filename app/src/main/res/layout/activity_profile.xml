<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/expandedImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_profile"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primaryTrans"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="85dp"
                    android:orientation="vertical"
                    android:id="@+id/imageupload"
                    android:layout_marginTop="10dp"
                    android:layout_height="85dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/userImage"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_profile"/>

                    <LinearLayout
                        android:layout_width="30dp"
                        android:padding="5dp"
                        android:id="@+id/camera"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="-25dp"
                        android:background="@drawable/white_circle"
                        android:layout_height="30dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_camera" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Test Team"
                        android:id="@+id/teamName"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lato_semibold"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/edit"
                        android:visibility="gone"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_edit"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_border"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/btnVerify"
                    android:text="Verify Account"
                    android:textColor="@color/white"
                    android:fontFamily="@font/lato_semibold"/>

            </LinearLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#F5F5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:id="@+id/transaction"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transaction"
                                android:textColor="@color/text_color"
                                android:padding="8dp"
                                android:textSize="14dp"
                                android:fontFamily="@font/lato_semibold"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_keyboard_arrow_right"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/font_color"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:fontFamily="@font/lato_semibold"
                                    android:textSize="13dp"
                                    android:id="@+id/deposite"
                                    android:text="â‚¹ 0"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/slate_black"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="13dp"
                                    android:text="Deposited"/>

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add Cash"
                                    android:id="@+id/addcash"
                                    android:textColor="@color/colorPrimary"
                                    android:fontFamily="@font/lato_semibold"
                                    android:paddingTop="7dp"
                                    android:paddingLeft="15dp"
                                    android:textSize="10dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="7dp"
                                    />

                            </androidx.cardview.widget.CardView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:fontFamily="@font/lato_semibold"
                                    android:textSize="13dp"
                                    android:id="@+id/cashbonus"
                                    android:text="â‚¹ 0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/slate_black"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="13dp"
                                    android:text="Cash Bonus"/>
                            </LinearLayout>




                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="100dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimary"
                                    android:fontFamily="@font/lato_semibold"
                                    android:textSize="13dp"
                                    android:id="@+id/winning"
                                    android:text="â‚¹ 0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/slate_black"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="13dp"
                                    android:text="Winning"/>
                            </LinearLayout>




                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Withdraw"
                                    android:id="@+id/winningwithdraw"
                                    android:textColor="@color/colorPrimary"
                                    android:fontFamily="@font/lato_semibold"
                                    android:paddingTop="7dp"
                                    android:paddingLeft="15dp"
                                    android:textSize="10dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="7dp"
                                    />


                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#F5F5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Playing History"
                                android:textColor="@color/text_color"
                                android:padding="8dp"
                                android:textSize="14dp"
                                android:fontFamily="@font/lato_semibold"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0px"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:padding="5dp"
                                    android:src="@drawable/contests"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/lato_semibold"
                                    android:id="@+id/totalContests"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="@color/slate_black"
                                    android:fontFamily="@font/lato_semibold"
                                    android:text="Contest"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/gray_btn_bg_color"
                                android:layout_marginTop="10dp"/>

                            <LinearLayout
                                android:layout_width="0px"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:padding="5dp"
                                    android:src="@drawable/matches"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12dp"
                                    android:fontFamily="@font/lato_semibold"
                                    android:id="@+id/totalmatches"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="@color/slate_black"
                                    android:fontFamily="@font/lato_semibold"
                                    android:text="Match"/>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/gray_btn_bg_color"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0px"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:padding="5dp"
                                    android:src="@drawable/series"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/lato_semibold"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12dp"
                                    android:id="@+id/totalWins"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="@color/slate_black"
                                    android:fontFamily="@font/lato_semibold"
                                    android:text="Wins"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="2px"
                                android:layout_height="match_parent"
                                android:background="@color/gray_btn_bg_color"
                                android:layout_marginBottom="10dp"/>

                            <LinearLayout
                                android:layout_width="0px"
                                android:gravity="center"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:padding="5dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/wins"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/lato_semibold"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12dp"
                                    android:id="@+id/totalSeries"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"
                                    android:textColor="@color/slate_black"
                                    android:fontFamily="@font/lato_semibold"
                                    android:text="Series"/>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/font_color"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tournament Leaderboard"
                            android:padding="15dp"
                            android:id="@+id/leaderboard"
                            android:drawableRight="@drawable/ic_keyboard_arrow_right"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/lato_regular"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#F5F5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_semibold"
                                android:padding="8dp"
                                android:text="Personal Details"
                                android:textColor="@color/text_color"
                                android:textSize="14dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/lato_semibold"
                                android:textColor="@color/colorPrimary"
                                android:layout_height="wrap_content"
                                android:textSize="11dp"
                                android:id="@+id/fullprofile"
                                android:padding="10dp"
                                android:text="Full Profile"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/font_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/lato_semibold"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:id="@+id/username"
                                android:text="-"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:id="@+id/userEmail"
                                android:layout_marginTop="10dp"
                                android:text="-"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:id="@+id/userMobile"
                                android:layout_marginTop="10dp"
                                android:text="-"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/lato_semibold"
                                android:textColor="@color/colorPrimary"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:id="@+id/btnChangePassword"
                                android:layout_marginTop="10dp"
                                android:text="Change Password"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:id="@+id/logout"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:fontFamily="@font/lato_semibold"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:text="Logout"/>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/ic_power_settings"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <include layout="@layout/footer"/>

</LinearLayout>