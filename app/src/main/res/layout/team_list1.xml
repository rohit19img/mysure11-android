<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        android:layout_height="160dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:id="@+id/ll"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teamName"
                    android:padding="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="16dp"
                    android:textColor="@color/text_color"
                    android:text="Team Name"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teamNameCC"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:visibility="gone"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/text_color"
                    android:buttonTint="@color/text_color"
                    android:text="Team Name"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/t1"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/colorPrimary"
                            android:text="Captain"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:id="@+id/captainName"
                            android:fontFamily="@font/lato_regular"
                            android:text="Captain Name"
                            android:textColor="@color/text_color"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="1px"
                        android:background="#ccc"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/colorAccent"
                            android:id="@+id/t2"
                            android:fontFamily="@font/lato_regular"
                            android:text="Vice-captain"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:text="Vice-captain Name"
                            android:fontFamily="@font/lato_regular"
                            android:id="@+id/viceCaptainName"
                            android:textColor="@color/text_color"/>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ccc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="  Preview"
                    android:textColor="@color/font_color"
                    android:id="@+id/btnPreview"
                    android:textSize="13dp"
                    android:fontFamily="@font/lato_regular"
                    android:textAllCaps="true"
                    android:drawableLeft="@drawable/ic_eye_accent"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="#ddffffff"
                android:visibility="gone"
                android:elevation="1dp"
                android:id="@+id/allreadyselected"
                android:layout_height="160dp">

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>