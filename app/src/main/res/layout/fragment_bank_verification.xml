<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.BankVerificationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                app:cardElevation="6dp"
                android:id="@+id/bankVerified"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bank"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textAllCaps="true"
                            android:fontFamily="@font/lato_semibold"
                            android:textColor="@color/text_color"
                            android:text="Verify BANK Account"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/main_green_color"
                        android:id="@+id/bankText"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="14dp"
                        android:text="&#10004; Your Bank details are sent for verification"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/bankDetails"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:id="@+id/t"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:fontFamily="@font/lato_semibold"
                            android:textColor="@color/text_color"
                            android:text="Bank Details"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:text="Account Holder"
                                android:textSize="12dp"
                                android:fontFamily="@font/lato_regular"
                                android:id="@+id/holderText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/holderName"
                                android:text="Name"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/lato_regular"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/text_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:text="Account No."
                                android:id="@+id/accText"
                                android:textSize="12dp"
                                android:fontFamily="@font/lato_regular"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/accNo"
                                android:text="Name"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/lato_regular"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/text_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_regular"
                                android:text="IFSC Code"
                                android:textSize="12dp"
                                android:id="@+id/ifscText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/number"
                                android:fontFamily="@font/lato_regular"
                                android:text="ifscCode"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/text_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_regular"
                                android:text="Bank Name"
                                android:textSize="12dp"
                                android:id="@+id/bankNameText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/bnkName"
                                android:fontFamily="@font/lato_regular"
                                android:text="Name"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/text_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:text="Branch"
                                android:textSize="12dp"
                                android:fontFamily="@font/lato_regular"
                                android:id="@+id/branchText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/branch"
                                android:text="Name"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:text="State"
                                android:fontFamily="@font/lato_regular"
                                android:id="@+id/stateText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/state"
                                android:fontFamily="@font/lato_regular"
                                android:text="Name"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="136dp"
                            android:layout_height="136dp"
                            android:id="@+id/passbook"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="1dp"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp"
                            android:fontFamily="@font/lato_regular"
                            android:id="@+id/comment"
                            android:gravity="center"
                            android:text="Your Bank Proof is rejected"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:layout_margin="2dp"
                            android:textColor="@color/text_color"
                            android:id="@+id/imageText"
                            android:visibility="gone"
                            android:fontFamily="@font/lato_regular"
                            android:text="Click on image to view full size image."
                            android:gravity="right"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                android:layout_margin="5dp"
                android:id="@+id/bankNotVerified"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/notVerified"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_bank"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/lato_semibold"
                                android:typeface="sans"
                                android:textAllCaps="true"
                                android:textColor="@color/text_color"
                                android:text="Verify BANK Account"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:src="@drawable/select_image"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:id="@+id/img"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:fontFamily="@font/lato_regular"
                            android:padding="10dp"
                            android:id="@+id/btnUpload"
                            android:text="Upload Bank account Proof"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/btn_grad"/>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="1px"
                            android:id="@+id/uimage"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/name"
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:hint="Account Holder Name*"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ qwertyuiopasdfghjklzxcvbnm"
                                android:textSize="14dp"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/text_color"
                                android:inputType="textPersonName"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/accountNumber"
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:hint="Account Number*"
                                android:textSize="14dp"
                                android:fontFamily="@font/lato_regular"
                                android:maxLength="18"
                                android:textColor="@color/text_color"
                                android:inputType="number"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/VaccountNumber"
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:hint="Verify Account Number*"
                                android:maxLength="18"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="14dp"
                                android:textColor="@color/text_color"
                                android:inputType="number"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:id="@+id/bankName"
                            android:layout_marginTop="8dp"
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:hint="Bank Name*"
                                android:textSize="14dp"
                                android:fontFamily="@font/lato_regular"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890&amp;  qwertyuiopasdfghjklzxcvbnm"
                                android:textColor="@color/text_color"
                                android:inputType="textCapCharacters"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/branchName"
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:hint="Branch Name*"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="14dp"
                                android:digits="QWERTYUIOPASDFGHJKLMNBVCXZ  qwertyuiopasdfghjklzxcvbnm"
                                android:textColor="@color/text_color"
                                android:inputType="textCapCharacters"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/ifscCode"
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:hint="IFSC Code*"
                                android:fontFamily="@font/lato_regular"
                                android:maxLength="11"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890  qwertyuiopasdfghjklzxcvbnm"
                                android:textSize="14dp"
                                android:textColor="@color/text_color"
                                android:inputType="textCapCharacters"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="State*"
                            android:textSize="10dp"
                            android:textColor="#999"/>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="3dp"
                            android:entries="@array/india_states"
                            android:background="@drawable/black_border"
                            android:layout_marginRight="8dp"
                            android:id="@+id/stateSpinner"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#999"
                            android:fontFamily="@font/lato_regular"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="#999"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:text="* All fields are mandatory"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Submit for Verification"
                        android:padding="10dp"
                        android:fontFamily="@font/lato_bold"
                        android:id="@+id/btnSubmit"
                        android:background="@drawable/btn_grad"
                        android:textColor="@color/white"
                        android:layout_margin="16dp"
                        android:gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="6dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/invalidBank"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bank"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/lato_semibold"
                            android:typeface="sans"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color"
                            android:text="Verify BANK Account"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="14dp"
                        android:text="To update your bank details please complete the steps mentioned below :"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:padding="8dp"
                        android:fontFamily="@font/lato_regular"
                        android:lineSpacingExtra="10px"
                        android:text="\u2022 Verify your mobile number.\n\u2022 verify your Email Id. \n\u2022 verify your PAN card."
                        android:textColor="#555"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>