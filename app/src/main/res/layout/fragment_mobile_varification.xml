<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.mobileVarificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/mobileVerify"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_smartphone"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/lato_semibold"
                        android:layout_gravity="center_vertical"
                        android:typeface="sans"
                        android:textColor="@color/text_color"
                        android:text="Verify Your Mobile"
                        />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:id="@+id/mobileNumber"
                    style="@style/StyledTilEditText2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:maxLength="10"
                        android:fontFamily="@font/lato_semibold"
                        android:hint="Mobile number"
                        android:textSize="14dp"
                        android:textColor="@color/text_color"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:fontFamily="@font/lato_semibold"
                    android:textColor="#999"
                    android:textSize="12dp"
                    android:text="We will send you a 4 digit OTP for verification."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Send OTP"
                    android:padding="5dp"
                    android:fontFamily="@font/lato_semibold"
                    android:id="@+id/verifyMobile"
                    android:background="@drawable/btn_grad"
                    android:textColor="@color/white"
                    android:layout_margin="15dp"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:id="@+id/mobileVerified"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/green_border"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_smartphone_green"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_semibold"
                        android:layout_gravity="center_vertical"
                        android:typeface="sans"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:text="Your mobile number is verified"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mobileText"
                        android:fontFamily="@font/lato_semibold"
                        android:textColor="@color/colorAccent"
                        android:padding="5dp"
                        android:textSize="16dp"
                        android:text="9999999999"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/emailVerify"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_email"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:typeface="sans"
                        android:fontFamily="@font/lato_semibold"
                        android:textColor="@color/text_color"
                        android:text="Verify Your Email"
                        />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_margin="8dp"
                    android:id="@+id/email"
                    style="@style/StyledTilEditText2"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:hint="Email ID"
                        android:editable="false"
                        android:fontFamily="@font/lato_semibold"
                        android:textSize="14dp"
                        android:textColor="@color/text_color"
                        android:inputType="textEmailAddress"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:fontFamily="@font/lato_semibold"
                    android:textColor="#999"
                    android:textSize="12dp"
                    android:text="We will send you a 4 digit OTP for verification."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Send OTP"
                    android:padding="5dp"
                    android:fontFamily="@font/lato_semibold"
                    android:id="@+id/verifyEmail"
                    android:background="@drawable/btn_grad"
                    android:textColor="@color/white"
                    android:layout_margin="15dp"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:id="@+id/emailVerified"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/green_border"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ic_email_green"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_semibold"
                        android:layout_gravity="center_vertical"
                        android:typeface="sans"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:text="Your Email address is verified"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailText"
                        android:padding="5dp"
                        android:textColor="@color/main_green_color"
                        android:fontFamily="@font/lato_semibold"
                        android:textSize="14dp"
                        android:text="ABC@XYZ.com"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>