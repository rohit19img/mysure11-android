<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CaptainViceCaptainFootballActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/back"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IND vs AUS"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:id="@+id/matchName"
                android:fontFamily="@font/lato_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05 : 18 : 32"
                android:textColor="@color/white"
                android:fontFamily="@font/lato_regular"
                android:textSize="15dp"
                android:id="@+id/matchTime"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_wallet"
            android:layout_gravity="center_vertical"
            android:id="@+id/wallet"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHOOSE CAPTAIN(C) &amp; VICE CAPTAIN(VC)"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="15dp"
        android:background="#f0f0f0"
        android:fontFamily="@font/lato_semibold"
        android:textColor="@color/text_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f0f0"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="C"
            android:textSize="13dp"
            android:textColor="@color/font_color"
            android:fontFamily="@font/lato_semibold"
            android:background="@drawable/captain_deselected"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12dp"
            android:text="gets 2x points"
            android:textColor="@color/text_color"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:fontFamily="@font/lato_semibold"/>

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="VC"
            android:layout_marginLeft="3dp"
            android:textSize="13dp"
            android:textColor="@color/font_color"
            android:fontFamily="@font/lato_semibold"
            android:background="@drawable/captain_deselected"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="gets 1.5x points"
            android:textColor="@color/text_color"
            android:textSize="12dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:fontFamily="@font/lato_semibold"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/playerList"
            android:layout_marginTop="5dp"
            android:dividerHeight="1px"
            android:divider="@color/text_color"
            android:clipToPadding="false"
            android:paddingBottom="90dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="25dp"
            android:elevation="2dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Team Preview"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="13dp"
                android:id="@+id/btnPreview"
                android:fontFamily="@font/lato_semibold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/btn_white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Save team"
                android:layout_margin="5dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:elevation="5dp"
                android:id="@+id/btnContinue"
                android:textSize="13dp"
                android:fontFamily="@font/lato_semibold"
                android:textColor="@color/white"
                android:background="@drawable/btn_primary"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>