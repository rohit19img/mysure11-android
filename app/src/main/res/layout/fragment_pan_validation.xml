<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.PanValidationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardVerified"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_credit_card"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textAllCaps="true"
                            android:padding="5dp"
                            android:fontFamily="@font/lato_semibold"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/text_color"
                            android:text="Verify your PAN"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/panVerified"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/colorAccent"
                        android:textSize="14dp"
                        android:text="&#10004; Your PAN Card details are sent for verification."/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardDetails"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/lato_semibold"
                            android:id="@+id/t"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/text_color"
                            android:text="PAN Card"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_regular"
                                android:text="Name"
                                android:id="@+id/nameText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/panname"
                                android:fontFamily="@font/lato_regular"
                                android:text="Name"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/text_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_regular"
                                android:text="PAN Number"
                                android:id="@+id/numberText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/number"
                                android:text="number"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/text_color"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:fontFamily="@font/lato_regular"
                                android:text="DOB"
                                android:id="@+id/dobText"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="2"
                                android:id="@+id/pandob"
                                android:fontFamily="@font/lato_regular"
                                android:text="Name"
                                android:textColor="@color/text_color"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="136dp"
                            android:layout_height="136dp"
                            android:id="@+id/pancard"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="1dp"
                            android:visibility="gone"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp"
                            android:id="@+id/comment"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center"
                            android:text="Your PAN card is rejected"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:fontFamily="@font/lato_regular"
                            android:layout_margin="2dp"
                            android:textColor="@color/text_color"
                            android:id="@+id/imageText"
                            android:visibility="gone"
                            android:text="Click on image to view full size image."
                            android:gravity="right"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp"
                android:id="@+id/cardNotVerified"
                android:layout_margin="5dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/notVerified"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_credit_card"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:fontFamily="@font/lato_semibold"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center_vertical"
                                android:typeface="sans"
                                android:textAllCaps="true"
                                android:textColor="@color/text_color"
                                android:text="Verify your PAN"
                                />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:id="@+id/img"/>

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:id="@+id/img1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:id="@+id/btnUpload"
                            android:text="Upload PAN CARD Image"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/btn_grad"/>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="1px"
                            android:id="@+id/uimage"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/name"
                            app:helperText="As on PAN Card"
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:hint="Name*"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:textSize="14dp"
                                android:inputType="textCapCharacters"
                                android:textColor="@color/text_color" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            android:id="@+id/panNumber"
                            app:helperText="10 Digit PAN no."
                            style="@style/StyledTilEditText2"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:fontFamily="@font/lato_regular"
                                android:maxLength="10"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                                android:textSize="14dp"
                                android:inputType="textCapCharacters"
                                android:hint="PAN number*"
                                android:textColor="@color/text_color" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textColor="#999"
                            android:layout_marginLeft="13dp"
                            android:fontFamily="@font/lato_regular"
                            android:id="@+id/dob"
                            android:layout_marginRight="13dp"
                            android:layout_marginTop="13dp"
                            android:textSize="14dp"
                            android:hint="Date of birth*"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#999"
                            android:fontFamily="@font/lato_regular"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:textColor="#999"
                        android:textSize="14dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center"
                        android:id="@+id/t6"
                        android:text="* All fields are mandatory"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit for Verification"
                        android:id="@+id/btnSubmit"
                        android:fontFamily="@font/lato_bold"
                        android:padding="10dp"
                        android:background="@drawable/btn_grad"
                        android:textColor="@color/white"
                        android:layout_margin="16dp"
                        android:gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="6dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/invalidRequest"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_credit_card"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/lato_semibold"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:typeface="sans"
                            android:textColor="@color/text_color"
                            android:text="Verify your PAN Details"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:padding="8dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/text_color"
                        android:textSize="14dp"
                        android:text="To update your PAN card details please complete the steps mentioned below :"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:padding="8dp"
                        android:lineSpacingExtra="10px"
                        android:text="\u2022 Verify your mobile number.\n\u2022 verify your Email Id\n\u2022 Complete your profile"
                        android:textColor="#555"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>