<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_margin="12dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prize pool"
                        android:paddingBottom="3dp"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/font_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:text="₹ 2100"
                        android:fontFamily="@font/lato_semibold"
                        android:textColor="@color/text_color"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:id="@+id/prizeMoney"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/winnerLL"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/trophy_winner"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Winners"
                            android:layout_marginLeft="3dp"
                            android:paddingBottom="3dp"
                            android:textSize="12dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/font_color" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textSize="16dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/numWinners"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entry Fee"
                        android:paddingBottom="3dp"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/font_color" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹50"
                        android:textSize="16dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/text_color"
                        android:id="@+id/entryFee"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/font_color"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Joined With"
                        android:paddingBottom="3dp"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/font_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:text="1 Team"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/text_color"
                        android:textSize="16dp"
                        android:id="@+id/joinedWith"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Points"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:textSize="12dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/font_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200"
                        android:textSize="16dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/text_color"
                        android:id="@+id/pointsGained"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rank"
                        android:paddingBottom="3dp"
                        android:textSize="12dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/font_color" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textSize="16dp"
                        android:fontFamily="@font/lato_semibold"
                        android:textColor="@color/text_color"
                        android:id="@+id/rank"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/font_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="1dp"
                android:textColor="@color/text_color"
                android:id="@+id/teamName"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:textColor="@color/text_color"
                android:id="@+id/wonAmount"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>